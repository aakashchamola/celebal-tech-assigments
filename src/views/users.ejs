<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
    }
    h1 {
      color: #2c3e50;
    }
    table {
      width: 60%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 10px;
      border: 1px solid #ccc;
    }
    th {
      background-color: #f4f4f4;
    }
  </style>
</head>
<body>
  <h1><%= title %></h1>
  <table>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
    <% if (users && users.length > 0) { %>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% }); %>
    <% } else { %>
      <tr><td colspan="3">No users found.</td></tr>
    <% } %>
  </table>
</body>
</html>
